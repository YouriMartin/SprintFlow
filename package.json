{
  "name": "sprintflow",
  "version": "1.0.0",
  "description": "SprintFlow - Jira and Monday's Killer",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "backend": "npm run start --workspace=apps/backend",
    "frontend": "npm run dev --workspace=apps/frontend",
    "backend:dev": "npm run start:dev --workspace=apps/backend",
    "backend:build": "npm run build --workspace=apps/backend",
    "backend:test": "npm run test --workspace=apps/backend",
    "frontend:dev": "npm run dev --workspace=apps/frontend",
    "frontend:build": "npm run build --workspace=apps/frontend",
    "docker:start": "./scripts/docker-start.sh",
    "docker:stop": "./scripts/docker-stop.sh",
    "docker:restart": "./scripts/docker-restart.sh",
    "docker:logs": "./scripts/docker-logs.sh",
    "docker:clean": "./scripts/docker-clean.sh",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build",
    "dev:backend": "./scripts/dev-backend.sh",
    "dev:frontend": "./scripts/dev-frontend.sh",
    "dev:all": "./scripts/dev-all.sh",
    "dev:postgres": "./scripts/dev-postgres.sh"
  },
  "keywords": [
    "monorepo",
    "nestjs",
    "nextjs",
    "postgresql"
  ],
  "author": "",
  "license": "AGPL-3.0"
}
